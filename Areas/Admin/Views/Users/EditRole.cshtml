@{
    ViewData["Title"] = "Edit User Role";
}


<div class="container mt-5">
    <div class="card shadow p-4" style="max-width: 500px; margin: auto;">
        <h3 class="text-center mb-3">Change Role</h3>
        <form asp-area="Admin" asp-controller="Users" asp-action="EditRole" method="post">
            <input type="hidden" name="id" value="@ViewBag.UserId" />

            <div class="mb-3">
                <label class="form-label">User Email</label>
                <input type="text" class="form-control" value="@ViewBag.UserEmail" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Select New Role</label>
                <select name="newRole" class="form-select">
                    @foreach (var role in ViewBag.AllRoles)
                    {
                        <option value="@role" selected="@(role == ViewBag.CurrentRole)">
                            @role
                        </option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary w-100">Save Changes</button>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                Back
            </a>
        </form>
    </div>
</div>
